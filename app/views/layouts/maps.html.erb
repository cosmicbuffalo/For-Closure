<!DOCTYPE html>
<html>
<head>
  <title>ForClosure</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css"> -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
  
  <%= csrf_meta_tags %>
</head>
<body>

<%= render partial: 'partials/header' %>
<%= yield %>

<div id="user-modal" class="modal collapsible">
  <%= render partial: "partials/user_modal" %>
</div>
<div id="logged-in" is-logged-in="<%= session[:user_id] ? 'true' : 'false' %>"> </div>

<div id="location-check" have-location="<%= session[:user_coords] ? 'true' : 'false' %>" class="modal">
</div>

<div id="search-check" have-search="<%= session[:search_coords] ? 'true' : 'false' %>" class="modal"></div>

</body>
</html>
