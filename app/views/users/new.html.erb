<%= form_for @user, url: users_path, html: { multipart: true } do |f| %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_area :password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>